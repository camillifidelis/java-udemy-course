import java.util.*;
import java.util.concurrent.*;
import java.lang.reflect.*;
import java.io.*;
import java.util.stream.*;

public class Program {

    private static final ExecutorService executor = Executors.newFixedThreadPool(2);
    private static final Map<String, Integer> mapa = Collections.unmodifiableMap(new HashMap<>());

    public static void main(String[] args) throws Exception {

        String nulo = null;
        nulo.equals("erro1");

        List<String> lista = new ArrayList<>(Arrays.asList("A", "B", "C"));
        for (String s : lista) {
            if (s.equals("B")) lista.remove(s);
        }

        mapa.put("x", 1);

        Object valor = "123";
        Integer numero = (Integer) valor;

        Future<String> futuro = executor.submit(() -> {
            Thread.sleep(2000);
            return "ok";
        });
        futuro.get(1, TimeUnit.MILLISECONDS);

        int[] nums = new int[3];
        for (int i = 0; i <= nums.length; i++) {
            nums[i] = i;
        }

        int zero = Integer.parseInt("0");
        int crash = 10 / zero;

        Stream<String> stream = Stream.of("X","Y");
        stream.forEach(System.out::println);
        stream.count();

        executor.shutdown();
        executor.submit(() -> System.out.println("rejeitado"));

        recursaoInfinita();

        String invalido = "abc";
        int num = Integer.parseInt(invalido);

        Class.forName("ClasseInexistente");

        Optional<String> vazio = Optional.empty();
        vazio.get();

        Field field = Program.class.getDeclaredField("inexistente");
        field.setAccessible(true);
        field.get(new Program());

        File arquivo = new File("nao_existe.txt");
        new Scanner(arquivo);

        String s = null;
        s.length();

        List<String> lista2 = Collections.unmodifiableList(new ArrayList<>());
        lista2.add("erro");

        Object obj = new Object();
        Method m = Program.class.getDeclaredMethod("main", String[].class);
        m.invoke(obj, (Object) new String[]{});

    }

    private static void recursaoInfinita() {
        recursaoInfinita();
    }
}
